mixin movie(movie, searchQuery)

    .movie
        .movie_img
            a(href=`/all/${movie._id}`)
                img(src=`http://res.cloudinary.com/denodoslr/image/upload/${movie.image}.jpg`)
        .movie_info
            a(href=`/all/${movie._id}`)
                h3= movie.movie_name
            hr
            if url.startsWith('/all/')
                p=movie.movie_description
                
            p= `Star rating: ${movie.star_rating}`
            p= `Genre: ${movie.genre}`
            p= `Cost per night: $ ${movie.cost_per_night}`
        
            if url.startsWith ('/all/')
                hr
                h3 Search for this movie
                .search_nav
                    form(action="/results" method="POST")
                    .input_wrapper
                        label(for="genre") Genre
                        input(type="text" id="genre" name="genre")
                    .input_wrapper
                        label(for="movie_name") Movie name
                        input(type="text" id="movie_name" name="movie_name" value=movie.movie_name)
                    .input_wrapper
                        label(for="cost_per_night") Cost per night
                        input(type="cost_per_night" id="cost_per_night" name="cost_per_night")

                    .input_wrapper
                        button(type="submit") SEARCH!

        if url === '/results' || url.startsWith('/confirmation/')
            .movie_order_details
                p= `Number of nights: ${searchQuery.duration}`
                p= `Departure date: ${searchQuery.dateOfDeparture}`
                - const costEach = searchQuery.duration * movie.cost_per_night
                - const totalCost = costEach * searchQuery.numberOfGuests
                p= `Total per person $ ${costEach}`
                hr
                h3= `Total cost: $ ${totalCost}`
            
                - const query = `id=${movie._id}$duration=${searchQuery.dateOfDeparture}&numberOfGuests=${searchQuery.numberOfGuests}`;
                if url ===`/results`
                    a.button(href=`/confirmation/${query}`) Continue
                else if url.startsWith('/confirmation/')
                    a.button(href=`/order-placed/${query}`) Place your order
                else
                a.button(href=`/login`) Please log in to order!
                